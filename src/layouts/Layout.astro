<style is:global>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		scroll-behavior: smooth;
	}

	body {
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
		line-height: 1.6;
		color: #1f2937;
		background: #ffffff;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 24px;
	}

	.site-header {
		position: sticky;
		top: 0;
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid #e5e7eb;
		z-index: 1000;
		padding: 16px 0;
	}

	.nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 32px;
	}

	.logo {
		font-size: 18px;
		font-weight: 700;
		color: #1f2937;
		text-decoration: none;
		white-space: nowrap;
	}

	.nav-links {
		display: flex;
		gap: 32px;
		flex: 1;
		justify-content: center;
	}

	.nav-links a {
		color: #4b5563;
		text-decoration: none;
		font-weight: 500;
		font-size: 15px;
		transition: color 0.2s;
		position: relative;
	}

	.nav-links a:hover,
	.nav-links a.active {
		color: #1f2937;
	}

	.nav-links a.active::after {
		content: '';
		position: absolute;
		bottom: -20px;
		left: 0;
		right: 0;
		height: 2px;
		background: #1f2937;
	}

	.social-icons {
		display: flex;
		gap: 16px;
	}

	.social-icons a {
		color: #4b5563;
		transition: color 0.2s;
		display: flex;
		align-items: center;
	}

	.social-icons a:hover {
		color: #1f2937;
	}

	main {
		min-height: calc(100vh - 200px);
	}

	.site-footer {
		background: #f9fafb;
		border-top: 1px solid #e5e7eb;
		padding: 48px 0 24px;
		margin-top: 80px;
	}

	.footer-content {
		display: grid;
		grid-template-columns: 2fr 1fr auto;
		gap: 48px;
		margin-bottom: 32px;
	}

	.footer-info h3 {
		font-size: 18px;
		font-weight: 600;
		margin-bottom: 8px;
		color: #1f2937;
	}

	.footer-info p {
		color: #6b7280;
		font-size: 14px;
		margin-bottom: 4px;
	}

	.footer-info a {
		color: #6b7280;
		text-decoration: none;
		transition: color 0.2s;
	}

	.footer-info a:hover {
		color: #1f2937;
	}

	.footer-links {
		display: flex;
		flex-direction: column;
		gap: 12px;
	}

	.footer-links a {
		color: #6b7280;
		text-decoration: none;
		font-size: 14px;
		transition: color 0.2s;
	}

	.footer-links a:hover {
		color: #1f2937;
	}

	.footer-bottom {
		padding-top: 24px;
		border-top: 1px solid #e5e7eb;
		text-align: center;
	}

	.footer-bottom p {
		color: #6b7280;
		font-size: 14px;
	}

	[data-voiceflow-widget] {
		position: fixed !important;
		bottom: auto !important;
		right: 24px !important;
		top: 24px !important;
		z-index: 999 !important;
	}

	@media (max-width: 768px) {
		.nav {
			flex-direction: column;
			gap: 16px;
		}

		.nav-links {
			flex-wrap: wrap;
			gap: 16px;
			justify-content: center;
		}

		.nav-links a.active::after {
			display: none;
		}

		.footer-content {
			grid-template-columns: 1fr;
			gap: 32px;
		}

		[data-voiceflow-widget] {
			right: 12px !important;
			top: 12px !important;
		}
	}
</style>
